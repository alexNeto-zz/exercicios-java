package lista_1;

public class Exercicio_1 {

	static void exercicioI() {

		java.util.Scanner input = new java.util.Scanner(System.in);

		System.out.println("Digite um número: ");
		int numero1 = input.nextInt();
		System.out.println("Digite outro número: ");
		int numero2 = input.nextInt();

		System.out.printf("A soma é %d", numero1 + numero2);
		System.out.printf("A subtração é %d", numero1 - numero2);
		System.out.printf("A multiplicação é %d", numero1 * numero2);
		System.out.printf("A divisão é %f", Double.parceDouble(numero1 / numero2));

	}
}
