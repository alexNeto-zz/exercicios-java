package lista_2;

public class Vendas {

	private int[] id = {0, 0, 0, 0, 0};
	private double totalPreco = 0;
	private int totalItens = 0;
	private double[] porcentagem = {0, 0, 0, 0, 0};

	public void compraRealizada(int id, double preco) {
		this.id[id] += 1;
		this.totalItens += 1;
		this.totalPreco += preco;
		porcentagem(id);
	}

	public void porcentagem(int id) {
		for (int i = 0; i <= id; i++)
			this.porcentagem[id] = (100 * this.id[id]) / totalItens;
	}

	public double getTotalPreco() {
		return totalPreco;
	}

	public double[] getProcentagem() {
		return porcentagem;
	}
}
