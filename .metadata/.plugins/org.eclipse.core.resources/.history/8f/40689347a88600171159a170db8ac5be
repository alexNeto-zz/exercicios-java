package lista_2;

public class Vendas {

	private int[] id;
	private double totalPreco = 0;
	private int totalItens = 0;
	private double[] porcentagem;
	double[] preco = {1.00, 2.98, 9.98, 4.49, 6.87};

	public Vendas() {
		this.porcentagem = new double[5];
		id = new int[5];
	}

	public void compraRealizada(int id, double preco) {
		this.id[id] += 1;
		System.out.println(this.id[0] + " " + this.id[1] + " " + this.id[2] + " " + this.id[3] + " " + this.id[4]);
		this.totalItens += 1;
		System.out.println(totalItens);
		this.totalPreco += preco;
		porcentagem();
	}

	public void porcentagem() {
		for (int i = 0; i < 5; i++) {
			this.porcentagem[i] = (100 * this.id[i]) / this.totalItens;		    
		}
	}

	public double getTotalPreco() {
		return totalPreco;
	}

	public double[] getProcentagem() {
		return this.porcentagem;
	}
}
